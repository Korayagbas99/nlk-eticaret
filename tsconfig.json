{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,

    /* --- alias & kalite yardımcıları --- */
    "baseUrl": "src",
    "paths": {
      "@assets": ["assets/index"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@context/*": ["context/*"],
      "@utils/*": ["utils/*"],
      "@theme": ["theme"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "App.tsx"],
  "exclude": ["node_modules"]
}
